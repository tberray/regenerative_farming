    <title>Register</title>
</head>
<body>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    
    <!-- navbar -->
    <%- include('partials/navbar') %>
    <!--navbar end-->

    <div class="content-no-sidenav">
        <div class="mx-auto pt-5 register-title">
            <h2>Register</h2>
        </div>

        <!--div class="mx-auto login-form-popins">
            <ul class="login-form-errors" style="left: -50px;">
                <% if(typeof errors != 'undefined') { %> <% errors.forEach(error=>{ %>
                <li class="login-li"> <%= error.message %> </li>
                <% }) %> <% } %>
            </ul>
        </div-->  

        <% if(typeof errors != 'undefined') { %> <% errors.forEach(error=>{ %>
        <p style="text-align: center; color:red;"> <%= error.message %> </li>
        <% }) %> <% } %>

        <img class="mke-circle" src="/images/1200px-University_of_Wisconsinâ€“Milwaukee_seal.svg.png" alt="uwm circle">

        <div class="mx-auto form-group" style="width: 300px;">
            <form action="/users/register" class="login-form" method="POST">
                <div class="pt-2" style="width: 275px;">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Name" required />
                </div>
                <div class="pt-2">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" required />
                </div>
                <div class="pt-2">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required />
                </div>
                <div class="pt-2">
                    <label for="confirm password">Confirm Password</label>
                    <input type="password" class="form-control" id="password2" name="password2" placeholder="Confirm password" required />
                </div>
                <div class="pt-2">
                    <input type="submit" class="btn btn-success btn-block" value="Register" />
                </div>
                <p style="text-align: center;">Already registered? <br>
                    <a href="/users/login">Login here</a>
                </p>
                
            </form>
        </div>
    </div> <!--end content div-->

</body>
</html>